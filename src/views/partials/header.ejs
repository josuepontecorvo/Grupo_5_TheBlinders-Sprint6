                <a href="/usuarios/detalle/<%= isLogged.id %>">
                    <img src="/images/users/<%= isLogged.image %> " alt="Imagen de usuario" style="border-radius: 100%; width: 30px; vertical-align:middle;box-shadow: 0 0 5px #fff;">
                </a>
                <a class="logout" href="/usuarios/logout" style="font-size: 14px;text-shadow: none;">
