        </figure>
        <nav class="top-navbar">
            <ul>
                <% if (locals.isLogged) { %>
                    <li>
                        
                        <a href="/usuarios/detalle/<%= isLogged.id %>">
                        
                            <img src="/images/users/<%= isLogged.image %> " 
